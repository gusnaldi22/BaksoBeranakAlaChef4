<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E80404"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ABOUT"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="2dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/bgputih"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_margin="8dp"
            android:src="@drawable/om_madi" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:text="Halo Nama Saya Ahmadi , saya Dulu Seorang Chef dan saya sudah pensiun , setelah pensiun saya membuka Bisnis Bakso Beranak Ala Chef."
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>